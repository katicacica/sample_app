<h1>Sign in</h1>

<%= form_for(:session, :url => sessions_path) do |f| %>
  <div class="field">
    <%= f.label :email, "E-mail" %><br />
    <%= f.text_field :email %>
  </div>
  <div class="field">
    <%= f.label :password, "Jelszó" %><br />
    <%= f.password_field :password %>
  </div>
  <div class="actions">
    <%= f.submit "Belépés" %>
  </div>
<% end %>

<p>Új felhasználó? <%= link_to "Regisztrálj most!", signup_path %></p>
